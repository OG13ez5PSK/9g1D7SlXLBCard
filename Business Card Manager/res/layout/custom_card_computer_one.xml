<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sat="http://schemas.android.com/apk/res/com.psktechnology.businesscard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/computer_template_one"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/computer_one_name_margin_left"
            android:layout_marginTop="@dimen/computer_one_name_margin_top"
            android:text="Your Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/legal_one_name_color"
            android:textSize="@dimen/computer_one_name_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtitlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/computer_one_title_margin_left"
            android:layout_marginTop="@dimen/computer_one_title_margin_top"
            android:text="Your Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/legal_one_title_color" />

        <TextView
            android:id="@+id/tvcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvphone"
            android:layout_marginLeft="@dimen/computer_one_tv_margin_left"
            android:text="Your Company"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvemail"
            android:layout_marginLeft="@dimen/computer_one_tv_margin_left"
            android:text="Your Phone Number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvweb"
            android:layout_marginLeft="@dimen/computer_one_tv_margin_left"
            android:text="Your Email Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvweb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/computer_one_web_margin_bottom"
            android:layout_marginLeft="@dimen/computer_one_tv_margin_left"
            android:text="Your Website"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivuser"
            android:layout_width="@dimen/computer_one_iv_size"
            android:layout_height="@dimen/computer_one_iv_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/computer_one_iv_margin_right"
            android:layout_marginTop="@dimen/computer_one_iv_margin_top"
            android:background="@drawable/view_border"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

    </RelativeLayout>
    
    <SeekBar
        android:id="@+id/sbtextsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btndelete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Delete" />

    <Button
        android:id="@+id/btnshare"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btndelete"
        android:text="Share" />

    <Button
        android:id="@+id/btnedit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnshare"
        android:text="Edit" />

    <Button
        android:id="@+id/btnlist"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnedit"
        android:text="Show Cards" />

</RelativeLayout>